<Window x:Class="WpfCryptography.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Caesar Cipher Encoder" Height="350" Width="525">
    <DockPanel>
        <StackPanel Orientation="Vertical" DockPanel.Dock="Top" Margin="10" RenderTransformOrigin="0.358,0.367" Height="170" Width="447">
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Cообщени: "/>
                <TextBox x:Name="InputTextBox" Width="249" Height="20" RenderTransformOrigin="0.025,0.201"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5" Width="438">
                <TextBlock Text="Ключ: "/>
                <TextBox x:Name="ShiftTextBox" Width="30"/>
                <Button Content="Шифрование" Click="EncryptButton_Click" Width="140" Margin="10"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Зашифрованное сообщени: " Width="167"/>
                <TextBox x:Name="OutputTextBox" Width="255" Height="22"/>
            </StackPanel>
        </StackPanel>
    </DockPanel>
</Window>